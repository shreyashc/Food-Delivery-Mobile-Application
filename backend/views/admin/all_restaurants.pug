doctype html
html
    head
        include ../includes/head.pug
        link(rel="stylesheet" type="text/css" href='/css/common.css')
        title Administrator
       

    body
        include ../includes/navbar.pug
        h1.page-heading ADMIN DASHBOARD
        div.p-3
            div.row.gap-2.justify-content-center
                for restaurant in restaurants
                    div.card.col-sm-6.col-md-4.col-lg-3.align-items-stretch.shadow-md.p-2
                        img.card-img-top(src=restaurant.imgUrl alt=restaurant.displayName  class={ "disabled-img": !restaurant.activated })
                        div.card-body.d-flex.flex-column
                            a.h5.card-title.text-decoration-none.text-dark(href= `/admin/manage_restaurant/${restaurant.id}`) #{restaurant.displayName}
                                span.d-inline-block.m-1.text-sm
                                    if restaurant.isVeg
                                        span.badge.rounded-pill.bg-success.text-sm Veg
                                    else 
                                        span.badge.rounded-pill.bg-danger.text-sm Non Veg
                            .h6.text-muted In #{restaurant.category}

                            p.card-text #{restaurant.address}
                            p.card-text #{restaurant.city}
                            p.card-text #{restaurant.phone}
                        

                                
                           

            