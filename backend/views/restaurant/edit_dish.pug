doctype html
html
    head
        include ../includes/head.pug
        link(rel="stylesheet" type="text/css" href='/css/login.css')
        title Edit Dish

    body
        include ../includes/navbar.pug
        h1.page-heading Edit Dish Details
        div(class="container loginForm update-form")
            form(action=`/restaurant/edit_dish/${item.id}`, method="post")

                div.form-group.has-feedback
                    input(type="text" name="title" class="form-control form-input" value=item.title required)
                    label(class="form-label") Title 

                div.form-group.has-feedback
                    input(type="text" name="description" class="form-control form-input" value=item.description required)
                    label(class="form-label") Description 
            
                div.form-check.form-switch
                    label(class="form-check-label" style="font-weight:600;" for="vegswitch") Veg
                    input(type="checkbox" class="form-check-input" id="vegswitch" checked=item.isVeg name="isVeg")

                br

                div.form-group.has-feedback
                    input(type="text" name="imgUrl" class="form-control form-input" value=item.imgUrl required)
                    label(class="form-label" for="") Image URL
                
                div.form-group.has-feedback
                    input(type="text" name="price" class="form-control form-input" value=item.price required)
                    label(class="form-label" for="") Price 
                
                div.form-group.has-feedback.form-group-last
                    input(type="text" name="category" class="form-control form-input" value=item.category required)
                    label(class="form-label") Category 
                div
                    button(id="submit" type="submit" class="btn btn-default submit") Submit
